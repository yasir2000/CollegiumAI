{
  "name": "collegium-ai",
  "version": "1.0.0",
  "description": "AI Multi-Agent Collaborative Framework for Digital Universities",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" \"npm run dev:blockchain\"",
    "dev:api": "nodemon src/api/server.ts",
    "dev:web": "cd web && npm run dev",
    "dev:blockchain": "ganache --deterministic --accounts 10 --host 0.0.0.0",
    "build": "npm run build:framework && npm run build:api && npm run build:web",
    "build:framework": "tsc -p tsconfig.json",
    "build:api": "tsc -p api/tsconfig.json",
    "build:web": "cd web && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "blockchain:compile": "truffle compile",
    "blockchain:migrate": "truffle migrate",
    "blockchain:init": "npm run blockchain:compile && npm run blockchain:migrate",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "deploy": "npm run build && docker-compose up -d",
    "docs:build": "typedoc --out docs/api src",
    "docs:serve": "http-server docs -p 8080"
  },
  "keywords": [
    "ai",
    "multi-agent",
    "higher-education",
    "blockchain",
    "university",
    "react",
    "governance",
    "compliance"
  ],
  "author": "CollegiumAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yasir2000/CollegiumAI.git"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@graphql-tools/schema": "^10.0.0",
    "@truffle/contract": "^4.6.31",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "web3": "^4.2.1",
    "ethers": "^6.8.1",
    "langchain": "^0.0.190",
    "openai": "^4.20.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "mongoose": "^7.6.3",
    "redis": "^4.6.10",
    "bull": "^4.12.2",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "typeorm": "^0.3.17",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "cron": "^3.1.6",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.6",
    "@types/lodash": "^4.14.200",
    "@types/jest": "^29.5.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "concurrently": "^8.2.2",
    "truffle": "^5.11.5",
    "ganache": "^7.9.1",
    "solhint": "^4.0.0",
    "typedoc": "^0.25.3",
    "http-server": "^14.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}