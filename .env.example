# Environment Configuration
NODE_ENV=development
PORT=3000
API_PORT=4000

# Database Configuration
DATABASE_URL=postgresql://collegiumai:password@localhost:5432/collegiumai_dev
MONGO_URL=mongodb://localhost:27017/collegiumai
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
BLOCKCHAIN_NETWORK=development
GANACHE_URL=http://localhost:8545
ETHEREUM_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@collegiumai.edu

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# External Integrations
CANVAS_API_URL=https://your-institution.instructure.com/api/v1
CANVAS_API_TOKEN=your_canvas_api_token
BANNER_API_URL=https://your-banner-instance.edu/api
BANNER_API_KEY=your_banner_api_key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Governance Framework APIs
AACSB_API_URL=https://api.aacsb.edu
HEFCE_API_URL=https://api.hefce.ac.uk
WASC_API_URL=https://api.wascsenior.org
QAA_API_URL=https://api.qaa.ac.uk

# Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Development Tools
DEBUG_MODE=true
HOT_RELOAD=true
MOCK_BLOCKCHAIN=true
MOCK_AI_RESPONSES=false